#compdef cdx

function __cdx_dirs ()
{
  if [[ -f ~/.cdx ]]; then
    _wanted files expl "files" compadd -Q -- $(cat ~/.cdx)
  fi
}

_arguments -C \
  ': :__cdx_dirs'

