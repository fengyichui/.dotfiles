# Dumpbin function for windows
dumpbin_func ()
{
    mode=$1
    shift
    while (($#!=0))
    do
        case $mode in
            'machine')      dumpbin /HEADERS $1 | awk "/machine \(/{print \$3 \": $1\"}"
            ;;
            'dependents')   dumpbin /DEPENDENTS $1
            ;;
            'exports')      dumpbin /EXPORTS $1
            ;;
        esac
        shift
    done
}

# du&sort: Stats directorys size and sort it
ds ()
{
    du -h --max-depth=1 $1 | sort -rh
}

