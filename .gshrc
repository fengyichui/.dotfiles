}

# latest
latest ()
{
    find "$@" -type f -printf "%TY-%Tm-%Td %TT \t%p\n" | sort -rn | less -F
}

# find file
ff ()
{
    dir=""
    for i; do
        if [[ "$1" == "-d" ]]; then
            if [[ -d "$2" ]]; then
                dir="$dir $2"
            fi
            shift; shift
        else
            break
        fi
    done
    for i; do
        p=$(sed 's/\$$//g' <<< "$i")
        if [[ "$p" == "$i" ]]; then
            eval "find $dir -iname '*$p*'"
        else
            eval "find $dir -iname '$p'"
        fi
    done
}

# grep pattern
gg ()
{
    dir=""
    for i; do
        if [[ "$1" == "-d" ]]; then
            if [[ -d "$2" ]]; then
                dir="$dir $2"
            fi
            shift; shift
        else
            break
        fi
    done
    for i; do
        eval "ag --color-match 31 -i '$i' $dir" #--nogroup
    done
}

# grep pattern
ggg ()
{
    dir=""
    for i; do
        if [[ "$1" == "-d" ]]; then
            if [[ -d "$2" ]]; then
                dir="$dir $2"
            fi
            shift; shift
        else
            break
        fi
    done
    for i; do
        eval "ag --color-match 31 --hidden --all-text -i '$i' $dir" #--nogroup
    done
}

# create a daemon process
daemon ()
{
    (nohup "$@" >/tmp/$1.nohup &!) &!
}

# do some commands in each sub-directory
dirdo ()
{
    find . -maxdepth 1 -mindepth 1 -type d -exec sh -c "(echo -e \"\e[33m{}:\e[0m\" && cd '{}' && eval '$*'; echo)" \;
}

# Count the number of times a word appears in files
# $ count <PATTERN> <FILES>
count ()
{
    grep -o "$@" | wc -l
}

# loop command times
loop ()
{
    num=0
    if [[ "$1" == -* ]]; then
        num=${1#-}
        shift
    fi

    if [[ "$num" == "0" ]]; then
        while true; do
            eval "$@"
        done
    else
        for ((i=0;i<$num;i++)); do
            eval "$@"
        done
    fi

    unset $num
}

# diff pach file
diffpath ()
{
    if [[ -d "$1" && -d "$2" ]]; then
        diff -U0 <(cd "$1" && find | sort) <(cd "$2" && find | sort)
    else
        echo "Usage: diffpath <path1> <path2>"
    fi
}

# proxy enable/disable
proxy-enable ()
{
    port=${1:-'8118'}
    export http_proxy="http://127.0.0.1:$port"
    export https_proxy="http://127.0.0.1:$port"
    export no_proxy="localhost, 127.0.0.1, ::1"
}
proxy-disable ()
{
    export http_proxy=
    export https_proxy=
    export no_proxy=
}

# make exe file smaller
exe-smaller ()
{
    size_old=$(ls -sh "$1" | awk '{print $1}')
    echo "strip..."
    strip "$1" >/dev/null
    echo "upx..."
    upx --best --force "$1" >/dev/null
    size_new=$(ls -sh "$1" | awk '{print $1}')
    echo "$size_old -> $size_new"
}

# exe with SelF-eXtracting, use WinRAR
exe-sfx ()
{
    if [[ -n "$2" ]]; then
        exepath=$1; shift
        exeresult=out.exe
        mkdir -p .sfx
        wrestool -x -t14 $exepath >.sfx/sfx.ico # in icoutils package
        cat >.sfx/sfx.opt << EOF
Setup=${exepath//\//\\} %sfxpar%
SetupCode
TempMode
Silent=1
Overwrite=1
EOF
        WinRAR a -sfx -afrar -s -m5 -ma -iicon.sfx/sfx.ico -k -z.sfx/sfx.opt $exeresult $@
        rm -r .sfx
    else
        cat << EOF
Usage:
  exe-sfx setup_exe_file input_files_dirs
Dependent:
  wrestool: Extract ico from Windows binaries. (icoutils package)
  WinRAR:   Create SFX file
EOF
    fi
}

