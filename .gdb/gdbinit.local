define hs662x
source ~/.dotfiles/.gdb/hs662x.gdb.py
end

define xx
source ~/.dotfiles/.gdb/dashboard.gdb
end

define connect2local
ignore-errors kill
target remote localhost:2331
end

define connect2remote
ignore-errors kill
target remote 192.168.2.66:2331
end

define connect
#connect2remote
connect2local
disable_wdt
mon exec EnableLowPowerHandlingMode
end

define jlink-restart
shell gdbserver-jlink --restart
end

define reconnect
ignore-errors kill
jlink-restart
connect
end

define rc
# 1st-rst: halt cpu
mon reset 1
load
# 2nd-rst: make MSP valid
mon reset 1
c
end

define rc1
remap2ram
# 1st-rst: halt cpu
mon reset 1
load
# 2nd-rst: make MSP valid
